#define _CRT_SECURE_NO_WARNINGS 1
#include<stdio.h>//头文件
int  main()//主函数
{
	int x;//创建变量x
	int y;//创建变量y
	puts("请输入两个整数");
	printf("整数a："); scanf("%d", &x);//输出语句“整数a”，输入数以赋值于x
	printf("整数b："); scanf("%d", &y);//输出语句“整数b”，输入数以赋值于y

	printf("两个整数的平均数为：%d", (x + y) / 2); //输出语句“两个整数的平均数为：”，值为(x + y) / 2
		
	return 0;
}
//因int为整型，会舍弃掉小数点后位，故若（x+y）为单数平均值为整数值，这也是int的最大特点
int main()
{
	int x = 9.99;//创建整型x初始值为9.99
	double y = 9.99;//创建浮点型y初始值为9.99

	printf("整型的值为；%d\n", x);
	printf("整型的平均值为：%d\n", x / 2);

	printf("浮点型的值为：%f\n", y);//%f为显示数字小数点后六位
	printf("浮点型的平均值为：%f\n", y);
	return 0;
}
//最后输出结果

//整型的值为；9
//整型的平均值为：4
//浮点型的值为：9.990000
//浮点型的平均值为：9.990000
